jest.config.js:
{
  "testEnvironment": "node",
  "collectCoverage": true,
  "modulePaths": ["<rootDir>/src"]
}

test/app.test.js:
const { sum } = require('../src/app');

test('adds 1 + 2 to equal 3', () => {
  expect(sum(1, 2)).toBe(3);
});

test('adds 0 + 0 to equal 0', () => {
  expect(sum(0, 0)).toBe(0);
});